{
  "name": "neomusic",
  "productName": "NeoMusic v3.0.0",
  "description": "Phầm mềm nghe nhạc NeoMusic",
  "keywords": [],
  "main": "main.js",
  "version": "3.0.0",
  "author": "khaicafe",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder",
    "package": "electron-builder -w --ia32 -p always",
    "make": "electron-forge make",
    "dist_all": "electron-builder -mwl",
    "build_mac_win": "electron-builder -mw -p always",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\""
  },
  "build": {
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": true
    },
    "extraResources": [
      "config.ini"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "khaicafe",
        "repo": "PosMusic-Autoupdate"
      }
    ],
    "win": {
      "publisherName": "NeoCafe",
      "icon": "./icon.ico",
      "signingHashAlgorithms": [
        "sha256"
      ],
      "signAndEditExecutable": true,
      "signDlls": false,
      "verifyUpdateCodeSignature": false,
      "certificateFile": "ca.pfx",
      "certificatePassword": "1"
    }
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.4",
    "axios": "1.3.4",
    "bootstrap": "^5.3.2",
    "dotenv": "^16.3.1",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^4.4.8",
    "electron-root-path": "^1.1.0",
    "electron-squirrel-startup": "^1.0.0",
    "electron-updater": "^6.1.1",
    "fs-extra": "^11.1.1",
    "fs.realpath": "1.0.0",
    "jquery-ui": "^1.13.2",
    "js-file-download": "^0.4.12"
  },
  "devDependencies": {
    "electron": "^26.1.0",
    "electron-builder": "^24.6.3"
  }
}
